FTP_PROTOCOL=ftp
FTP_PORT=21
FTP_SERVER_DIR=public_html/ncf/

# Alternative FTP Servers Configuration Examples:

# cPanel Hosting
# FTP_SERVER=yourdomain.com
# FTP_USERNAME=cpanel_username
# FTP_PASSWORD=cpanel_password
# FTP_SERVER_DIR=public_html/ncf/

# Shared Hosting
# FTP_SERVER=ftp.yourdomain.com
# FTP_USERNAME=ftp_username
# FTP_PASSWORD=ftp_password
# FTP_SERVER_DIR=www/ncf/

# VPS/Dedicated Server
# FTP_SERVER=your-server-ip
# FTP_USERNAME=root
# FTP_PASSWORD=server_password
# FTP_SERVER_DIR=/var/www/html/ncf/

# SFTP Configuration (More Secure)
# FTP_PROTOCOL=sftp
# FTP_PORT=22
# Add SSH_PRIVATE_KEY secret for key-based authentication

